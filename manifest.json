{
    "manifest_version": 3,
    "name": "Winter",
    "version": "1.0",
    "description": "A cool winter theme extension.",
    "action": {
        "default_popup": "popup.html",
        "default_icon": "winter.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "chrome_url_overrides": {
        "newtab": "newtab.html"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "css": ["snow.css"]
        }
    ],
    "permissions": ["storage", "scripting", "activeTab", "tabs"],
    "host_permissions": ["<all_urls>"],
    "web_accessible_resources": [
        {
            "resources": ["winter.png", "freeze-animation.mp4"],
            "matches": ["<all_urls>"]
        }
    ]
}