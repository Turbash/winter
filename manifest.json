{
    "manifest_version": 3,
    "name": "Winter",
    "version": "1.0",
    "description": "A cool winter theme extension.",
    "action": {
        "default_popup": "popup.html",
        "default_icon": "winter.png"
    },
    "chrome_url_overrides": {
        "newtab": "newtab.html"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "css": ["snow.css"]
        }
    ],
    "permissions": ["storage","scripting","activeTab"]
}